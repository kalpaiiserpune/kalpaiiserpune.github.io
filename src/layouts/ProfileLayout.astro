---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import { ViewTransitions } from "astro:transitions";
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION, TRANSITION_API } from "../config";

const {
  image,
  desig,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  includeSidebar = true,
  sideBarActiveItemID,
  ogType,
} = Astro.props;
const refer = title.replace(/^\s+|\s+$/gm,'');
---

<!doctype html>
<html lang="en" data-theme="autumn">
  <head>
    <BaseHead title={title} description={description} image={image} , ogType={ogType} />
    {TRANSITION_API && <ViewTransitions />}
  </head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content bg-base-100">
        <Header title={SITE_TITLE} />
        <div class="md:flex md:justify-center">
          <main class="mt-10 m-10 flex-grow lg:max-w-[625px] max-w-[100vw]">
<!-- 
            <button class="rounded-md border border-transparent py-2 px-4 flex items-center mb-8 text-center text-sm transition-all text-neutral-900 hover:bg-neutral-700 hover:text-slate-100 focus:bg-neutral-700 focus:text-slate-100 active:bg-neutral-700 active:text-slate-100 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none" type="button">
             
              
             <svg width="24px" height="24px" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg" stroke="currentColor"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><title>ionicons-v5-a</title><polyline points="244 400 100 256 244 112" style="fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px"></polyline><line x1="120" y1="256" x2="412" y2="256" style="fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px"></line></g></svg>
             <text class="ml-2">Back</text>
            </button> -->

                
            <a href="/people" class="relative inline-block px-4 py-2 font-medium group mb-8">
              <span class="absolute inset-0 w-full h-full transition duration-200 ease-out transform translate-x-1 rounded-md translate-y-1 bg-black group-hover:-translate-x-0 group-hover:-translate-y-0"></span>
              <span class="absolute inset-0 w-full h-full bg-base-100 border-2 border-black rounded-md group-hover:bg-black"></span>
              <span class="relative text-black rounded-md group-hover:text-white"><div class="flex flex-row align-middle"><svg class="mr-2 width="24px" height="24px" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg" stroke="currentColor"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><title>ionicons-v5-a</title><polyline points="244 400 100 256 244 112" style="fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px"></polyline><line x1="120" y1="256" x2="412" y2="256" style="fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px"></line></g></svg> Back</div></span>
              </a>

          <Image width={375} height={211} format="webp" src={image} alt={title} transition:name={`${refer} image`} class="rounded-xl mb-6 shadow-none transition-shadow duration-300 ease-in-out hover:shadow-lg" />
          <!-- <Image width={375} height={211} format="webp" src={image} alt={title} class="rounded-xl mb-6" />   -->
          <article class="prose prose-lg max-w-[750px] prose-img:mx-auto"></article>
            <h1 class="title mt-2 mb-1 text-4xl font-bold" transition:name={`${refer} title`}>{title}</h1>
            <em transition:name={`${refer} desc`}>{desig}</em>
            
            
            </article>
            <slot />
          
          </main>
        </div>
        <!-- <Footer /> -->
      </div>
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
    </div>
  </body>
</html>
